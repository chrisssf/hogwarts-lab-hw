<form class="center" action="/students/<%= @student.id %>" method="post">
  <label for="first-name">First Name: </label>
  <input class="form_margin" type="text" name="first_name" id="first-name" value="<%= @student.first_name.capitalize %>">
  <br>
  <label for="last-name">Last Name: </label>
  <input class="form_margin" type="text" name="last_name" id="last-name" value="<%= @student.last_name.capitalize %>">
  <br>
  <label for="house_select">Select House: </label>
  <select class="form_margin" name="house_id" id="house_select">
    <% @houses.each do |house| %>
    <option value="<%= house.id %>" <% if house.name == @student.house.name %> selected="selected" <% end %>><%= house.name.capitalize %></option>
    <% end %>
  </select>
  <br>
  <label for="age">Age: </label>
  <input class="form_margin" type="number" min="1" name="age" id="age" value="<%= @student.age %>">
  <br>
  <input class="button" type="submit" value="Edit">
</form>
